<%= form_for [refinery, :videos_admin, @video] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @video,
              :include_object_name => true %>


  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>

  <div class='field'>
    <p>How to find the YouTube video ID. Click image below to enlarge.<p><a href="/assets/how-to-find-youtube-video-id.jpg"><%= image_tag "how-to-find-youtube-video-id.jpg", size: "200x100", title: "Click to Enlarge" %></a></p>
    <%= f.label "YouTube ID" -%>
    <%= f.text_field :youtube_id %>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.videos.admin.videos.video'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @video.title) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
