<% content_for :body_content_title do %>
  <%= @course.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @course.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @course.description %>
    </p>
  </section>
  <section>
    <h1>Start Date</h1>
    <p>
      <%=raw @course.start_date %>
    </p>
  </section>
  <section>
    <h1>End Date</h1>
    <p>
      <%=raw @course.end_date %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="courses">
      <% @courses.each do |course| %>
        <li>
          <%= link_to course.name, refinery.courses_course_path(course) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
