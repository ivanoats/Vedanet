<% content_for :body_content_title do %>
  <%= @book.title %>
<% end %>

<% content_for :body_content_left do %>
 <section id="book">
    <p>
      <%= image_fu @book.cover, nil %>
      <%=raw @book.description %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="books">
      <% @books.each do |book| %>
        <li>
          <%= link_to book.title, refinery.books_book_path(book) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
